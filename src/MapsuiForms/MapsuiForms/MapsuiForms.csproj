<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.0.2</Version>
    <Authors>Jose Simas</Authors>
    <Description>Xamarin.Forms 3.0 / .NET Standard 2.0 Mapsui map control custom renderer for iOS, UWP (coming soon), WPF and Android applications. This version is a recompile of the project https://github.com/bertt/Mapsui.Forms (which is based on https://github.com/charlenni/Mapsui.Forms) that references Xamarin Forms 3.3.0.912540 and Mapsui 1.4.8.</Description>
    <Copyright>Jose Simas</Copyright>
    <PackageLicenseUrl>https://github.com/josesimas/Mapsui.Forms/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/josesimas/Mapsui.Forms</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RootNamespace>Mapsui.Forms</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Mapsui" Version="1.4.8" />
    <PackageReference Include="Xamarin.Forms" Version="3.3.0.967583" />
  </ItemGroup>
</Project>